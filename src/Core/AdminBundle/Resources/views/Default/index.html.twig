                <div id="caroussel-illu"><img src="{{ asset('bundles/grdfdefault/images/illustration/caroussel_illustration.png') }}" alt="Tutoriel"></div>
            </li>
        {% for actuality in actualities %}
            <!-- Images non statiques du carousel -->
            <li relItem="carou">
                {% set assetPath = 'bundles/grdfdefault/images/illustration/actu_default.png' %}
                {% set altLogo = 'Image non définie' %}
                {% if actuality.pictureFilename is defined and actuality.pictureFilename is not empty %}
                    {% set assetPath = actuality.pictureFilename|assetPath %}
                    {% set altLogo = "Image de l'actualité " ~ actuality.title %}
                    <div class="pull-left">
                        <img src="{{ asset(assetPath) }}" alt="{{ altLogo }}">
                    </div>
                {% else %}
                    <div class="pull-left">
                        <img src="{{ asset('bundles/grdfdefault/images/illustration/actu_default.png') }}" alt="{{ altLogo }}">
                    </div>
                {% endif %}
                
                <div>
                    <h2 class="itemTitle">
                        {{ actuality.title|raw  }}
                    </h2>
                    <div class="itemDescription">
                        {{ actuality.description|raw  }}
                    </div>
                </div>
            </li>
        {% endfor %}
        </ul>
            
        <ul id="itemSelect">
            <li relItem="carou" class="active">X</li>
            <!-- Titre des images en accord avec le carousel -->
            {% for actuality in actualities %}
                <li relItem="carou">{{ actuality.priority + 1 }}</li>
            {% endfor %}
        </ul>
    </div>
